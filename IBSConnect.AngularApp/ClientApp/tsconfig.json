{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    // skipLibCheck added to suppres errors "An accessor cannot be declared in an ambient context."
    "skipLibCheck": true,
    "module": "es6",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
